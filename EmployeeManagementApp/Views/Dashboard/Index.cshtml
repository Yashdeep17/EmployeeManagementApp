@model EmployeeManagementApp.Models.DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="mb-4">Business Analytics Dashboard</h1>

<div class="row mb-5 text-center">
    <div class="col-md-4">
        <div class="card text-white bg-primary shadow">
            <div class="card-body">
                <h5 class="card-title">Total Employees</h5>
                <h2 class="display-4">@Model.TotalEmployees</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success shadow">
            <div class="card-body">
                <h5 class="card-title">Total Departments</h5>
                <h2 class="display-4">@Model.TotalDepartments</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-danger shadow">
            <div class="card-body">
                <h5 class="card-title">Monthly Salary Expense</h5>
                <h2 class="display-4">@Model.TotalSalaryExpense.ToString("C0")</h2>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow border-0 rounded-3">
            <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                <h6 class="m-0 text-muted fw-bold text-uppercase">Headcount by Department</h6>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
                <div style="position: relative; height: 280px; width: 100%;">
                    <canvas id="departmentChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // 2. Safely convert our C# Dictionary into JavaScript Arrays
        const labels = @Html.Raw(Json.Serialize(Model.DepartmentHeadcounts.Keys));
        const dataValues = @Html.Raw(Json.Serialize(Model.DepartmentHeadcounts.Values));

        // 3. Draw the Chart
        // 3. Draw the Chart
        const ctx = document.getElementById('departmentChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Employees',
                    data: dataValues,
                    backgroundColor: [
                        '#0d6efd', // Blue
                        '#198754', // Green
                        '#dc3545', // Red
                        '#ffc107', // Yellow
                        '#0dcaf0'  // Cyan
                    ],
                    borderWidth: 0, // Removes the white border between slices
                    hoverOffset: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false, // <-- THIS STOPS IT FROM BECOMING HUGE
                cutout: '75%', // <-- Makes the ring thinner and more elegant
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true, // Changes legend boxes to elegant circles
                            padding: 20,
                            font: {
                                size: 12
                            }
                        }
                    }
                }
            }
        });
    </script>
}