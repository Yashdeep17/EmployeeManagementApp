@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav align-items-center mt-2 mt-sm-0">
    @if (SignInManager.IsSignedIn(User))
    {
        var fullEmail = User.Identity?.Name ?? "User";
        var shortName = fullEmail.Contains("@") ? fullEmail.Split('@')[0] : fullEmail;

        <li class="nav-item me-3 mb-2 mb-sm-0">
            <a class="nav-link bg-light rounded-pill px-3 py-1 border shadow-sm text-dark fw-medium d-flex align-items-center text-decoration-none" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Account">
                <i class="bi bi-person-circle fs-5 me-2 text-primary"></i>
                @shortName
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline m-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3 fw-bold shadow-sm">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark fw-semibold px-3" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item ms-2">
            <a class="btn btn-primary btn-sm rounded-pill px-4 fw-bold shadow-sm" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login
            </a>
        </li>
    }
</ul>